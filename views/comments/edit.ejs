                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">-->
                <!--</div>-->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/posts">Go back</a>
        </div>
        
        
        
        
    </div>
</div>
