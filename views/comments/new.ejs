<% include ../partials/header %>

<div class="container d-flex h-100 w-50 justify-content-center align-items-center">
    <div class="flex-column flex-fill h-75 d-inline-block">

        <h1 class="text-center">Write New Comment</h1>

        <div>
            <form action="/posts/<%= post._id %>/comments" method="POST">
                <div class="input-group">
                    <textarea class="form-control" rows="10" type="text" name="comment[content]" placeholder="write your comment here" aria-label="With textarea"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/posts">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>