<div class="container d-flex h-100 w-50 justify-content-center align-items-center">
    <div class="flex-column flex-fill h-75 d-inline-block">                
        <h1 class="text-center">Edit your post</h1>
        <div>
            <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
                
                <div class="input-group">
                    <textarea class="form-control" rows="10" name="post[content]" aria-label="With textarea"><%= post.content %></textarea>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/posts">Go back</a>
        </div>
        
        
        
        
    </div>
</div>
